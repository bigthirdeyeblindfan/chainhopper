# ChainHopper Contract Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Deployer Private Key
# =============================================================================
# Your private key for deployment (without 0x prefix)
PRIVATE_KEY=

# =============================================================================
# REQUIRED: Treasury Address
# =============================================================================
# Address to receive collected fees (defaults to deployer if not set)
TREASURY_ADDRESS=

# =============================================================================
# Contract Addresses (set after deployment for configuration scripts)
# =============================================================================
FEE_COLLECTOR_ADDRESS=
SWAP_ROUTER_ADDRESS=
REFERRAL_REGISTRY_ADDRESS=

# =============================================================================
# RPC Endpoints
# =============================================================================
# Get free RPC URLs from:
# - Alchemy: https://alchemy.com
# - Infura: https://infura.io
# - QuickNode: https://quicknode.com

MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
SONIC_RPC_URL=https://rpc.soniclabs.com
BERACHAIN_RPC_URL=https://artio.rpc.berachain.com
KAIA_RPC_URL=https://public-en.node.kaia.io
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# =============================================================================
# Block Explorer API Keys (for contract verification)
# =============================================================================
ETHERSCAN_API_KEY=
ARBISCAN_API_KEY=
OPTIMISM_API_KEY=
BASESCAN_API_KEY=
POLYGONSCAN_API_KEY=
BSCSCAN_API_KEY=
SNOWTRACE_API_KEY=
SONICSCAN_API_KEY=
BERATRAIL_API_KEY=
KAIASCAN_API_KEY=
