{
  "name": "@chainhopper/adapters",
  "version": "0.1.0",
  "description": "Blockchain adapters for ChainHopper",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chainhopper/types": "*",
    "@mysten/sui": "^1.0.0",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.90.0",
    "@ton/ton": "^13.9.0",
    "viem": "^2.7.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "@chainhopper/types": "*"
  }
}